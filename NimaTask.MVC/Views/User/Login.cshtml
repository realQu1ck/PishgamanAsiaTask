@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form asp-action="LoginConfirm">
    <div class="form-group col-4">
        <label>Please enter your phone number</label>
        <input class="form-control" placeholder="Phone Number" asp-for="PhoneNumber" class="form-control" />
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group col-4 mt-3">
        <label>Please enter your password</label>
        <input class="form-control" placeholder="Password" asp-for="Password" class="form-control" type="password"/>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <button class="btn btn-outline-success mt-3" type="submit">Login</button>
</form>
